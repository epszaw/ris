{
  "name": "ris",
  "version": "0.0.0-development",
  "description": "Runtime imperceptible schemes",
  "main": "./ris.min.js",
  "repository": "git@github.com:lamartire/ris.git",
  "author": "lamartire <lamartire@gmail.com>",
  "license": "GNU 3.0",
  "private": false,
  "scripts": {
    "test": "jest",
    "lint": "eslint src/**/*.js",
    "format": "prettier src/**/*.js __test__/**/*.js --write",
    "build": "node ./build",
    "size": "size-limit",
    "semantic-release": "semantic-release",
    "travis-deploy-once": "travis-deploy-once"
  },
  "lint-staged": {
    "ris.min.js": [
      "size"
    ],
    "src/**/*.js": [
      "lint",
      "format",
      "git add"
    ]
  },
  "husky": {
    "pre-commit": "npm run build && lint-staged",
    "pre-push": "jest"
  },
  "release": {
    "prepare": [
      {
        "path": "@semantic-release/changelog"
      },
      "@semantic-release/git"
    ]
  },
  "size-limit": [
    {
      "path": "./ris.min.js",
      "limit": "2,99 KB"
    }
  ],
  "browserslist": [
    "last 3 versions",
    "not dead",
    "ie >= 9"
  ],
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "prettier",
      "prettier/standard"
    ],
    "plugins": [
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "semi": false,
          "singleQuote": true,
          "trailingComma": "all"
        }
      ]
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "jest": {
    "testURL": "http://localhost/",
    "moduleNameMapper": {
      "src/(.*)$": "<rootDir>/src/$1",
      "^__fixtures__/(.*)$": "<rootDir>/__test__/__fixtures__/$1"
    }
  },
  "resolutions": {
    "babel-core": "7.0.0-bridge.0"
  },
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@babel/preset-env": "^7.1.6",
    "@semantic-release/changelog": "^3.0.1",
    "@semantic-release/git": "^7.0.5",
    "eslint": "^5.9.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.1.4",
    "jest": "^23.6.0",
    "lint-staged": "^8.0.5",
    "prettier": "^1.15.2",
    "rollup": "^0.67.3",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-uglify": "^6.0.0",
    "semantic-release": "^15.12.0",
    "size-limit": "^0.21.0",
    "travis-deploy-once": "^5.0.9"
  }
}
